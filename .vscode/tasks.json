{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch-tests",
      "command": "dotnet",
      "type": "process",
      "args": ["watch", "test"],
      "problemMatcher": "$msCompile",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
